<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<fx:root minWidth="350" type="BorderPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <center>
        <VBox BorderPane.alignment="CENTER">
            <children>
                <ListView fx:id="lstAnnotations" VBox.vgrow="ALWAYS">
               <VBox.margin>
                  <Insets left="6.0" right="6.0" top="6.0" />
               </VBox.margin>
                </ListView>
                <HBox alignment="CENTER" spacing="3.0" VBox.vgrow="NEVER">
                    <children>
                        <TextField fx:id="txfName" onAction="#addAnnotation" HBox.hgrow="ALWAYS" />
                        <Button fx:id="btnAdd" mnemonicParsing="false" onAction="#addAnnotation" text="Add" />
                    </children>
                    <padding>
                    </padding>
                    <VBox.margin>
                        <Insets bottom="6.0" left="6.0" right="6.0" top="6.0" />
                    </VBox.margin>
                </HBox>
            </children>
        </VBox>
    </center>
</fx:root>
