<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<fx:root type="BorderPane" xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <GridPane hgap="3.0" vgap="3.0" BorderPane.alignment="CENTER">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" />
          <ColumnConstraints hgrow="ALWAYS" />
            <ColumnConstraints hgrow="SOMETIMES" />
            <ColumnConstraints hgrow="SOMETIMES" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints vgrow="ALWAYS" />
          <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label text="Name reference" />
            <ListView fx:id="lstFiles" GridPane.columnSpan="4" GridPane.rowIndex="1" />
            <TextField fx:id="txfNameReference" GridPane.columnIndex="1" />
            <Button  onAction="#selectFile" mnemonicParsing="false" text="..." GridPane.columnIndex="2" />
            <Button mnemonicParsing="false" onAction="#renameFiles" text="Rename selected files" GridPane.columnSpan="4" GridPane.halignment="RIGHT" GridPane.rowIndex="2" />
            <Button mnemonicParsing="false" onAction="#loadFiles" text="Load files" GridPane.columnIndex="3" />
         </children>
         <BorderPane.margin>
            <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
         </BorderPane.margin>
      </GridPane>
   </center>
</fx:root>
